#!/bin/bash

# Fail hard and fast
set -eo pipefail

export ETCD_PORT=${ETCD_PORT:-4001}
export HOST_IP=${HOST_IP:-172.17.42.1}
export ETCD=$HOST_IP:4001

echo "[zookeeper-myid] booting container. ETCD: $ETCD"

# Loop until confd has updated the zookeeper config
until confd -onetime -node $ETCD -config-file /etc/confd/conf.d/zookeeper-myid.toml; do
  echo "[zookeeper-myid] waiting for confd to refresh zookeeper's myid"
  sleep 5
done

# Run confd in the background to watch the upstream servers
confd -interval 5 -node $ETCD -config-file /etc/confd/conf.d/zookeeper-myid.toml &
echo "[zookeeper-myid] confd is listening for changes on etcd..."

# Start zookeeper
echo "[zookeeper-myid] restarting zookeeper service..."
service zookeeper restart

# Tail all zookeeper log files
#tail -f /var/log/zookeeper/*.log
